<link rel="stylesheet" type="text/css" href="/css/users/mypage.css" />

<div id="content">
  <div id="storeId" data-store-id="<%- storeuser.store._id -%>"></div>
  <div class="page_title">
    <div class="title_ct">
      <span class="title">STORE MANAGER PAGE</span>
      <span class="sub_title">
        <%- storeuser.store.name -%>
        관리자 페이지
      </span>
    </div>
  </div>

  <div class="mypage_content card">
    <div class="content_col">
      <div class="info_ct">
        <div class="text-field id">
          <input type="text" id="id" value="<%- storeuser.id.split('-')[1] %>" />
          <label for="id">아이디</label>
        </div>
        <div class="text-field">
          <input type="password" id="password" value="" />
          <label for="password">변경할 비밀번호</label>
        </div>
      </div>
    </div>
    <div class="btn-area">
      <div class="full-btn bg-success" id="submit">저장</div>
    </div>
  </div>
</div>

<script src="/js/users/storeuser/mypage.js"></script>
